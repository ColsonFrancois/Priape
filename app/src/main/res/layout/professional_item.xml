<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="User"
            type="com.example.francois.priape.Model.User"/>
    </data>
    <RelativeLayout
        android:id="@+id/professional_item"
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000"
            android:alpha="0.12"
            android:layout_alignParentBottom="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/professional_item_professionalPicture"
                android:src="@drawable/ic_image_photo_camera"
                bind:pictureUrlProfessional="@{User.picture}"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="13dp">
                <TextView
                    android:id="@+id/professional_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="23dp"
                    android:alpha="0.55"
                    android:text="@{User.name}"/>

                <TextView
                    android:id="@+id/professional_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:layout_marginTop="5dp"
                    android:textSize="18dp"
                    android:alpha="0.45"
                    android:text="@{User.email}"/>
                <TextView
                    android:id="@+id/professional_phone"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:alpha="0.45"
                    android:text='@{String.format("%s", User.phone) }'
                    />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</layout>